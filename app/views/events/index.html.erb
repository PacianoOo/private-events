<div class="container">
  <div class="py-4">
    <%= link_to "Create Event!", new_event_path, method: :get, class: "#{button_class(theme: "secondary")} p-4" %>
  </div>  
  <div class="grid grid-cols-4 gap-4">
    <% @events.each do |e| %>
      <div class="flex flex-col bg-slate-300 rounded-md shadow-md h-max p-2">
        <%= e.title %>
        <%= e.created_by %>
        <%= e.description %>
        <%= e.start_time.strftime("%B %d, %Y %I:%M %p") %>
        <%= e.end_time.strftime("%B %d, %Y %I:%M %p") %>
        <%= e.event_date.strftime("%B %d, %Y %I:%M %p") %>
      </div>
    <% end %>
  <div>
</div>